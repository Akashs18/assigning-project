<!DOCTYPE html>
<html>
<head>
  <title>Report</title>
  <style>
    table { width:100%; border-collapse:collapse }
    th,td { border:1px solid #ccc; padding:8px }
    button { margin:2px }
  </style>
</head>
<body>

<h2>Assignments</h2>

<table>
<tr>
  <th>Employee</th>
  <th>Project</th>
  <th>Status</th>
  <th>Action</th>
</tr>

<% assignments.forEach(a => { %>
<tr>
  <td><%= a.employee %></td>
  <td><%= a.project_name %></td>
  <td><%= a.status %></td>
  <td>
    <% if(role !== 'MD' && a.status === 'Pending'){ %>
      <form method="POST" action="/update-status">
        <input type="hidden" name="assignmentId" value="<%= a.id %>">
        <button name="status" value="Accepted">Accept</button>
        <button name="status" value="On Hold">Hold</button>
        <button name="status" value="Rejected">Reject</button>
      </form>
    <% } %>
  </td>
</tr>
<% }) %>

</table>

</body>
</html>
